pipeline {
    agent any
    
    environment {
        // Define any environment variables here
        DOCKER_IMAGE = 'fnewimage:latest'
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout code from version control
                git url: 'https://github.com/syedfaizan9920/KSA-Market.git', branch: 'main'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    docker.build("${env.DOCKER_IMAGE}")
                }
            }
        }
        

